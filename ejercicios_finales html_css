#ejercicio3


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Estilos</title>
    <link rel="stylesheet" href="estilos3.css">
</head>
<body>
    <h1>Color y Fuente</h1>
</body>
</html>


#css

body {
    background-color: #f0f0f0;
    font-family: Arial, sans-serif;
}
h1 {
    color: blue;
}


#ejercicio4

<nav>
    <ul class="menu-flex">
        <li><a href="#">Uno</a></li>
        <li><a href="#">Dos</a></li>
        <li><a href="#">Tres</a></li>
    </ul>
</nav>

#css

.menu-flex {
    list-style: none;
    padding: 0;
    /* Flexbox para horizontal */
    display: flex;
    gap: 15px;
}



#ejercicio5

<table>
    <thead>
        <tr>
            <th>A</th>
            <th>B</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>2</td>
        </tr>
    </tbody>
</table>

#css

table {
    border-collapse: collapse;
}
th, td {
    border: 1px solid black;
    padding: 8px;
}




#ejercicio6

<form action="procesar.php" method="POST">
    <label for="n">Nombre:</label>
    <input type="text" id="n" name="nombre" required>

    <label for="e">Email:</label>
    <input type="email" id="e" name="email" required>

    <label for="m">Mensaje:</label>
    <textarea id="m" name="mensaje"></textarea>

    <button type="submit">Enviar</button>
</form>



#ejercicio7
form {
    padding: 20px;
}

input, textarea, button {
    margin-bottom: 10px;
    display: block; /* Para que ocupen su propia línea */
}

button[type="submit"] {
    padding: 10px;
    background-color: green;
    color: white;
    border: none;
}



#css

form {
    padding: 20px;
}

input, textarea, button {
    margin-bottom: 10px;
    display: block; /* Para que ocupen su propia línea */
}

button[type="submit"] {
    padding: 10px;
    background-color: green;
    color: white;
    border: none;
}


#ejercicio8


<div class="tarjeta">
    <img src="imagen.jpg" alt="Producto">
    <div class="info">
        <h3>Título</h3>
        <p>Descripción</p>
        <span>$10</span>
    </div>
</div>

#css
.tarjeta {
    /* Flexbox */
    display: flex;
    align-items: center; /* Alinear verticalmente */
    gap: 10px;
    border: 1px solid gray;
    padding: 10px;
}
.tarjeta img {
    width: 50px;
    height: 50px;
}


#ejercicio9
<div class="contenedor-grid">
    <header>Header</header>
    <aside>Sidebar</aside>
    <main>Contenido</main>
    <footer>Footer</footer>
</div>
  
  
  #css
  
.contenedor-grid {
    /* Grid */
    display: grid;
    /* Estructura Header/Sidebar-Main/Footer */
    grid-template-columns: 1fr 3fr; /* Sidebar y Main */
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
        "h h"
        "s m"
        "f f";
    height: 100vh;
}

header { grid-area: h; }
aside { grid-area: s; }
main { grid-area: m; }
footer { grid-area: f; }



#ejercicio10

#css
/* REQUERIMIENTO: Media Query para apilar columnas */
@media (max-width: 600px) {
    .contenedor-grid {
        /* Una sola columna */
        grid-template-columns: 1fr;
        /* Reordenar las áreas apiladas */
        grid-template-areas:
            "h"
            "s"
            "m"
            "f";
    }
}



