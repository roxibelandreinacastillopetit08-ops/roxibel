#ejercicio9

public class Coche
{
    public string Marca { get; set; }
    public string Modelo { get; set; }
    public int Anio { get; set; }

    public Coche(string marca, string modelo, int anio)
    {
        Marca = marca;
        Modelo = modelo;
        Anio = anio;
    }

    public void MostrarDetalles()
    {
        Console.WriteLine($"Marca: {Marca}, Modelo: {Modelo}, Año: {Anio}");
    }
}

#ejercicio10

List<Coche> garaje = new List<Coche>();

// Instanciación
garaje.Add(new Coche("Toyota", "Corolla", 2020));
garaje.Add(new Coche("Ford", "Focus", 2018));

// Recorrido y uso
foreach (Coche coche in garaje)
{
    coche.MostrarDetalles();
}
